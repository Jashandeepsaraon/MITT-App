@model  Course
@{
    ViewBag.Title = "Delete";
}

<div class="body-content" style="margin-bottom:360px">
    <div class="card card-stats mb-4 mb-xl-0 shadow--hover">
        <div class="card-header">
            <h2>Are you sure you want to delete this Course?</h2>
        </div>
        <div class="card-body" style="width:500px">
            <h4>Course</h4>
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Name)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>
                    Total Hours
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Hours)
                </dd>

                <dt>
                    Program Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Program.Name)
                </dd>

                <dt>
                    Instructor Name
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Instructor.FirstName)
                </dd>
            </dl>

            @using (Html.BeginForm())
            {
                <div class="form-actions no-color">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <div style="margin-top:10px; ">
                        @Html.ActionLink("Back to List", "Index")
                    </div>
                </div>
            }
        </div>
    </div>
</div>