@model CreateEditCourseViewModel
@{
    ViewBag.Title = "CreateCourse";
    var hours = Model.Hours == default(TimeSpan) ? "" : Model.Hours.ToString();
}

<div class="col-xl-9 col-lg-12 center">
    <div class="card card-stats mb-4 mb-xl-0 shadow--hover">
        <div class="card-header">
            <h2>Edit Course</h2>
        </div>
        <div class="card-body">
            @Html.ValidationSummary(false, "", new { @class = "text-danger small" })
            @Html.AntiForgeryToken()
            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Name, "Course Name", new { @class = "form-control-label" })
                <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-caps-small"></i></span>
                    </div>
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = nameof(Model.Name), style = "padding-left:5px;" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Hours, "Course Time", new { @class = "form-control-label" })
                <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-watch-time"></i></span>
                    </div>
                    <input type="time" name="@nameof(Model.Hours)" value="@hours" class="form-control" pattern="[0-9]{2}:[0-9]{2}" />
                    @*<input type="text" name="@Model.Hours" value="3:15 PM" class="form-control" />*@
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.ProgramId, "School Program", new { @class = "form-control-label" })
                <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-app"></i></span>
                    </div>
                    @Html.DropDownListFor(model => model.ProgramId, Model.ProgramList, "---- Select a Program ----", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.ProgramId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.InstructorId, "Instructors", new { @class = "form-control-label" })
                <div class="input-group input-group-alternative">
                    <div class="input-group-prepend">
                        <span class="input-group-text"><i class="ni ni-app"></i></span>
                    </div>
                    @Html.DropDownListFor(model => model.InstructorId, Model.InstructorList, "--- Select a Instructors ---", new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.InstructorId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-inline row">
                <div class="text-center col">
                    <button type="submit" class="btn btn-primary my-4">Edit Course</button>
                </div>
            </div>
        </div>
    </div>
</div>

