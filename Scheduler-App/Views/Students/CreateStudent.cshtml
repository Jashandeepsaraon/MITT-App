@model CreateEditStudentViewModel

@{
    ViewBag.Title = "CreateStudent";
}

<div class="body-content" style="margin-bottom:360px">
    <div class="card card-stats mb-4 mb-xl-0 shadow--hover">
        <div class="card-header">
            <h2>Create Student</h2>
        </div>
        <div class="card-body" style="width: 400px">
            <form method="post">
                @Html.ValidationSummary(false, "", new { @class = "text-danger small" })
                <div class="form-group">
                    @Html.LabelFor(p => p.FirstName, "FirstName:")
                    @Html.TextBoxFor(p => p.FirstName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(p => p.LastName, "LastName:")
                    @Html.TextBoxFor(p => p.LastName, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(p => p.Email, "Email:")
                    @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
                </div>
                <div class="form-inline row">
                    <div class="text-center col">
                        <button type="submit" class="btn btn-success my-4">Create Student</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
<script src="https://cdn.bootcss.com/jquery/3.2.1/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        // Dropdown list change event.
        $('#ProgramId').change(function () {
            $('#CourseId option').remove();
            $.getJSON('/students/GetCourses', { ProgramId: $('#ProgramId').val() }, function (data) {
                $.each(data, function () {
                    $('#CourseId').append('<option value=' +
                        this.Id + '>' + this.Name + '</option>');
                });
            }).fail(function (jqXHR, textStatus, errorThrown) {
                alert('Error getting courses!');
                alert('Error getting courses!');
                alert('Error getting courses!');
            });
        });
    });</script>