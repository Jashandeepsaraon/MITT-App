@model CreateEditStudentViewModel

@{
    ViewBag.Title = "Edit";
}

<form method="post">
    <div class="form-group">

        @Html.LabelFor(p => p.FirstName, "FirstName:")
        @Html.TextAreaFor(p => p.FirstName, new { @class = "form-control" })

        @Html.LabelFor(p => p.LastName, "LastName:")
        @Html.TextAreaFor(p => p.LastName, new { @class = "form-control" })

        @Html.LabelFor(p => p.Email, "Email:")
        @Html.TextBoxFor(p => p.Email, new { @class = "form-control" })
    </div>
    <br />
    <div class="">
        <button type="submit" class="btn btn-default">Submit</button>
    </div>

</form>