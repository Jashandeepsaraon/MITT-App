@model List<InstructorViewModel>

@{
    ViewBag.Title = "Import Instructor";
}
<div style="margin-bottom:600px">
    <div class="card-header">
        <h2>Create Instructor through CSV</h2>
    </div>

    <div style="margin-top:20px">
        @using (Html.BeginForm("ImportInstructor", "Instructor", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <input type="file" name="postedFile" />
            <button type="submit"  class="btn btn-success my-4">Import</button>
        }

        <table id="sample-datatables" class="table table-striped" style="margin-top:40px" cellpadding="0" cellspacing="0">
            <thead>
                <tr>
                    <th>FirstName</th>
                    <th>LastName</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (InstructorViewModel instructor in Model)
                {
                    <tr>
                        <td>@instructor.FirstName</td>
                        <td>@instructor.LastName</td>
                        <td>@instructor.Email</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
