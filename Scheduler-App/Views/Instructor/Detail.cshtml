@model InstructorViewModel
@{
    ViewBag.Title = "Details";
}

<div class="body-content" style="margin-bottom:480px; width:600px">
    <div class="card card-stats mb-4 mb-xl-0 shadow--hover">
        <div class="card-header">
            <h2>Details</h2>
        </div>
        <table class="table table-condensed no-border" id="sample-datatables">
            <thead>
                <tr>
                    <th>First Name</th>
                    <td>@Model.FirstName</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>@Model.LastName</td>
                </tr>
                <tr>
                    <th>Last Name</th>
                    <td>@Model.Email</td>
                </tr>
                <tr>
                    <th style="display:flex; justify-content:flex-start">
                        Courses
                        (
                        <div>
                            <a href="@Url.Action("AssignCourse", "Course", new {instructorId = ViewBag.id})">Assign Course</a>
                        </div>
                        )
                    </th>
                    <td>
                        @foreach (var course in Model.Courses)
                        {
                            <div style="display:flex; justify-content:flex-start">
                                <p>
                                    <a href="@Url.Action("Details", "Course", new { id = course.Id} )">
                                        @course.Name
                                    </a>
                                </p>
                                <form method="post" action="@Url.Action("RemoveCourse","Course", new { id = course.Id,InstructorId = ViewBag.id })">
                                    <button class="btn-delete" style="margin-left:10px; margin-top:-5px; color:red; background:none; border:none; height:30px;font-size:small">Delete</button>
                                </form>
                            </div>
                         }
                    </td>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
        <div style="margin-left:12px; font-size:medium ">
            @Html.ActionLink("Back to List", "Index")
        </div>
    </div>
</div>